<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!-- Header with app name -->
    <TextView
        android:id="@+id/settings_header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:text="Weight-Journal Settings" />

    <!-- SMS setting -->
    <LinearLayout
        android:id="@+id/sms_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_header"
        >
    <TextView
        android:id="@+id/sms_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_header"
        android:textStyle="bold"
        android:text="SMS notifications?"
        />
    <!-- Field for Phone Number -->
    <EditText
        android:id="@+id/phone_field"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter phone number"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/sms_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        <!-- Disabled by default, change to deactivate when active -->
    <Button
        android:id="@+id/request_permission_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate SMS Notifications"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/phone_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Button to request permission, disable once granted -->
    <Button
        android:id="@+id/activate_notifications_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request SMS Permissions"
        app:layout_constraintTop_toBottomOf="@id/request_permission_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!-- Other settings below -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sms_layout"
        android:textStyle="bold"
        android:text="Other settings here: "
        />

    <!-- Bottom Nav Bar -->
    <LinearLayout
        android:id="@+id/simple_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple_500"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/weight_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Journal" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

